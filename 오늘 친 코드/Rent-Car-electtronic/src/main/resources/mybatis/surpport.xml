<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rentcar.support.mapper.SurpportMapper">

<!--    검색기능?-->
    <select id="list" parameterType="Map" resultType="com.rentcar.support.model.Surpport">
        select *
        from surpport
        where carnum like concat('%', #{carnum} ,'%')
        order by carnum
    </select>

    <select id="read" parameterType="String" resultType="com.rentcar.support.model.Surpport">
        select *
        from surpport
        where carnum = #{carnum}
    </select>


<!--    차량만 들록해 줄 것-->
    <insert id="create" parameterType="com.rentcar.support.model.Surpport">
        insert into surpport(carnum)
        values(#{carnum});
    </insert>

<!--    출동시 요청자의 위치 정보를 저장한다.-->
    <update id="update" parameterType="com.rentcar.support.model.Surpport">
        UPDATE surpport
        SET rx = #{rx},ry = #{ry}
        WHERE carnum = #{carnum};

    </update>

</mapper>